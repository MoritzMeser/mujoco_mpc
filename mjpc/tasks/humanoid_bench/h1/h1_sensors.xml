<mujoco model="H1_Sensors">
    <!-- The following sensors are generated by the copilot and not checked by hand-->
    <sensor>
        <!-- torso upright -->
        <framezaxis name="torso_upright" objtype="body" objname="torso_link"/>

        <!-- head height -->
        <framepos name="head_height" objtype="site" objname="head"/>

        <!-- left foot height -->
        <framepos name="left_foot_height" objtype="site" objname="left_foot"/>

        <!-- right foot height -->
        <framepos name="right_foot_height" objtype="site" objname="right_foot"/>

        <!-- center of mass position -->
        <subtreecom name="center_of_mass_position" body="pelvis"/>

        <!-- center of mass velocity -->
        <subtreelinvel name="center_of_mass_velocity" body="pelvis"/>

        <!-- body velocity -->
        <velocimeter name="body_velocity" site="com"/>

        <!-- torso vertical orientation -->
        <framezaxis name="torso_vertical_orientation" objtype="body" objname="torso_link"/>

        <!-- left hand position -->
        <framepos name="left_hand_position" objtype="body" objname="left_hand"/>

        <!-- left hand velocity -->
        <subtreelinvel name="left_hand_velocity" body="left_hand"/>

        <!-- right hand position -->
        <framepos name="right_hand_position" objtype="body" objname="right_hand"/>

        <!-- right hand velocity -->
        <subtreelinvel name="right_hand_velocity" body="right_hand"/>

        <framexaxis name="pelvis_x_orientation" objtype="body" objname="pelvis"/>
        <frameyaxis name="pelvis_y_orientation" objtype="body" objname="pelvis"/>
        <framezaxis name="pelvis_z_orientation" objtype="body" objname="pelvis"/>

        <framepos name="pelvis_position" objtype="body" objname="pelvis"/>

<!--        <accelerometer name="com_acc" site="com"/>-->
        <framelinacc name="com_acc" objtype="body" objname="torso_link"/>

        <framequat name="pelvis_orientation" objtype="body" objname="pelvis"/>

        <framepos name="imu" objtype="site" objname="imu"/>

    </sensor>
</mujoco>